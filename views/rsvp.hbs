<style>
    body {
        margin: 0;
        padding: 0;
        font-family: "Candara", Arial, sans-serif;
        text-align: center;
    }

    h1 {
        font-family: "oooh baby", Arial, sans-serif;
        font-size: 20vh;
    }

    .formcontainer {
        max-width: 600px;
        margin: 0 auto;
    }

    form {
        background-color: white;
        padding: 20px;
        color: #572231;
        font-weight: lighter;
    }

    form label {
        display: block;
        margin-top: 10px;
        font-weight: lighter;
    }

    form input[type="text"],
    form input[type="email"],
    form input[type="submit"] {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        color: #572231;
        font-weight: lighter;
    }

    form input[type="submit"] {
        font-size: 3vw;
        background-color: white;
        color: #572231;
        cursor: pointer;
        font-weight: lighter;
    }

    /* Media query for laptop size */
    @media (min-width: 768px) {
        form input[type="text"],
        form input[type="email"],
        form input[type="submit"] {
            width: calc(50% - 5px);
        }
        
        form label.inline-labels {
            display: inline-block;
            margin-right: 10px;
            font-weight: lighter;
        }

        form .radio-container {
            display: flex;
            align-items: center;
        }

        form input[type="radio"] {
            margin-right: 5px;
        }

        #containerForm {
            display: flex;
            justify-content: center;
        }

        #imgContainer {
            position: absolute;
            left: 0;
            top: 0;
            width: 50%;
        }
    }

    /* Media query for phone size */
    @media (max-width: 767px) {
        #imgContainer {
            display: none;
        }
          h1 {
        font-family: "oooh baby", Arial, sans-serif;
        font-size: 10vh;
    }
    }



       .navbar {
          
            overflow: hidden;
        }

        .navbar a {
            float: left;
            display: block;
            color: #28618E;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-family: "Candara", Arial, sans-serif;
            font-size: 18px;
        }

       

        @media (max-width: 600px) {
            .navbar {
                display: flex;
                justify-content: center;
            }

            .navbar a {
                display: block;
            }
        }

</style>



